{
    "name": "fperdomo/http",
    "description": "HTTP Component",
    "keywords": ["http", "request", "response"],
    "license": "MIT",
    "authors": [
        {
            "name": "Fermin Perdomo",
            "email": "masterfermin02@gmail.com",
            "role": "Creator / Main Developer"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "12.3.*",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Http\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
      "refactor": "rector",
      "types": "phpstan analyse src --level=8",
      "test:unit": "phpunit",
      "test:refactor": "rector --dry-run",
      "test": [
        "@test:unit",
        "@test:refactor"
      ]
    }
}
